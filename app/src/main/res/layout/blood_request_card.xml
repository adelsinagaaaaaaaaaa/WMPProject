<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    app:cardElevation="4dp"
    app:cardCornerRadius="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Blood Type Badge -->
        <TextView
            android:id="@+id/blood_type_badge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="A+"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="16sp"
            android:background="@drawable/blood_badge_background" />

        <!-- Urgent Badge -->
        <TextView
            android:id="@+id/urgent_badge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="URGENT"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:padding="6dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/urgent_bedge_bg"
            android:visibility="gone" />

        <!-- Request Title -->
        <TextView
            android:id="@+id/request_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Needs A+ Blood Donor!"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="8dp" />

        <!-- Posted By -->
        <TextView
            android:id="@+id/posted_by"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Posted by: John Doe"
            android:layout_marginTop="4dp"
            android:textSize="14sp" />

        <!-- Location -->
        <TextView
            android:id="@+id/location_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dhaka"
            android:layout_marginTop="4dp"
            android:textSize="14sp" />

        <!-- Contact -->
        <TextView
            android:id="@+id/contact_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="01712345678"
            android:layout_marginTop="4dp"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="14sp" />

        <!-- Posted Time -->
        <TextView
            android:id="@+id/posted_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Posted on: 10:00 AM, 12 Feb"
            android:layout_marginTop="4dp"
            android:textSize="12sp"
            android:textColor="@android:color/darker_gray" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
