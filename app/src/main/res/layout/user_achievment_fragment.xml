<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/red_button_bg"
    android:padding="16dp"
    tools:context=".fragments.AchievmentsView">

    <TextView
        android:id="@+id/ShowInof"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:padding="16dp"
        android:text="You are not registered as a donor. Please update your profile to see achievements."
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:visibility="gone" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/donorAchiev"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:visibility="visible">

            <!-- Badge Section -->
            <LinearLayout
                android:id="@+id/badges_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView android:id="@+id/badge_bronze" style="@style/BadgeIconStyle" android:src="@android:drawable/star_on" android:contentDescription="Bronze Donor" />
                <ImageView android:id="@+id/badge_silver" style="@style/BadgeIconStyle" android:src="@android:drawable/star_on" android:contentDescription="Silver Donor" />
                <ImageView android:id="@+id/badge_gold" style="@style/BadgeIconStyle" android:src="@android:drawable/star_on" android:contentDescription="Gold Donor" />
                <ImageView android:id="@+id/badge_platinum" style="@style/BadgeIconStyle" android:src="@android:drawable/star_on" android:contentDescription="Platinum Donor" />
                <ImageView android:id="@+id/badge_first_drop" style="@style/BadgeIconStyle" android:src="@android:drawable/ic_menu_add" android:contentDescription="First Drop" />
                <ImageView android:id="@+id/badge_life_saver" style="@style/BadgeIconStyle" android:src="@android:drawable/ic_dialog_info" android:contentDescription="Life Saver" />

            </LinearLayout>

            <!-- Donation Cooldown Progress -->
            <TextView
                android:id="@+id/donateInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="Next donation available in:"
                android:textColor="@android:color/white"
                android:textSize="18sp" />

            <RelativeLayout
                android:id="@+id/progress_layout"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:visibility="gone">

                <ProgressBar
                    android:id="@+id/progress_bar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:indeterminate="false"
                    android:max="120"
                    android:progressDrawable="@drawable/circular_progress_bar"
                    android:rotation="-90" />

                <TextView
                    android:id="@+id/nextDonate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="34\ndays"
                    android:textColor="@android:color/white"
                    android:textSize="24sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/yesnolayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:visibility="gone">

                <Button
                    android:id="@+id/btnYes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:text="Yes, I did" />

                <Button
                    android:id="@+id/btnNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No, not yet" />
            </LinearLayout>

            <!-- Donation Stats -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="Total Donations:"
                        android:textColor="@android:color/white" />

                    <TextView
                        android:id="@+id/settotalDonate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 times"
                        android:textColor="@android:color/white"
                        android:textSize="28sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/impact_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="You have helped save 0 lives!"
                        android:textColor="#FFDDDD"
                        android:visibility="gone" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="Last Donated:"
                        android:textColor="@android:color/white" />

                    <TextView
                        android:id="@+id/setLastDonate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="N/A"
                        android:textColor="@android:color/white"
                        android:textSize="20sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Share Button -->
            <Button
                android:id="@+id/btn_share_achievement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="Share My Achievements" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
